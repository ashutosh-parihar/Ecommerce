<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, ['Male', 'Female', 'Other'], autocomplete: "off" %>
  </div>
<div class="form-group">
  <label for="user_role">Role:</label><br>
  <%= f.radio_button :roles, 'supplier' %>
  <%= label_tag :supplier, 'Supplier' %><br>
  <%= f.radio_button :roles, 'customer' %>
  <%= label_tag :customer, 'Customer' %>
</div>


  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autocomplete: "street-address" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary', style: 'margin-top: 20px;' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

